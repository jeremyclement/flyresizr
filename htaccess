# Copy following lines in your .htaccess file,
# and change php-flyresizr in RewriteRule if you named the folder differently
# -------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # flyresizR rewrite rule
    RewriteCond %{REQUEST_FILENAME} ^.+\.(jpe?g|png|gif)$ [NC]
    RewriteRule ^(.*\/)([^\/]+)-((\d+[*@]?x)|(x\d+)|(\d+x\d+[!^<>@]?))\.(jpe?g|png|gif)$ flyresizr/index.php?path=$1&name=$2&size=$3&ext=$7 [L]
    
</IfModule>
